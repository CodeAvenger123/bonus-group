---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<div class="bg-primaryBlue text-white text-lg p-4 rounded hover:bg-blue-400 hover:border-2" style="font-family: poppinsMedium">
	<a href={href}>
		<span>
			{title}
			<!-- <span>&rarr;</span> -->
		</span>
	</a>
</div>